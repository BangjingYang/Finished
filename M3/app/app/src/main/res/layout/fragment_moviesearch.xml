<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/searchImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/searchImage"
        android:hint="Enter a moive name"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawablePadding="5dp"/>
    <Button
        android:id="@+id/button_search"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/et_search"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Search"
        android:textSize="15sp"
        android:layout_below="@+id/searchImage"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/smovieimage"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_below="@id/button_search"
        android:padding="10dp"
        android:text=""
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/smoviename"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_below="@id/button_search"
        android:padding="10dp"
        android:text="Movie Name"
        android:layout_marginLeft="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/sreleasedate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/smoviename"
        android:padding="10dp"
        android:layout_below="@id/button_search"
        android:text="Release Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/lv_searchmovie"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_below="@id/smoviename"
        android:layout_weight="4" />

</RelativeLayout>